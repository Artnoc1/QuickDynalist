<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetItem"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:foreground="@drawable/widgetSelectableItemBackground"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemParent"
        android:visibility="gone"
        android:textSize="10sp"
        style="@style/Widget.AppCompat.TextView"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/itemText"
        android:textSize="16sp"
        style="@style/Widget.AppCompat.TextView"
        tools:text="Item text"
        android:textColor="@color/widgetTextColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/itemNotes"
        android:textSize="12sp"
        style="@style/Widget.AppCompat.TextView"
        tools:text="A very long description."
        android:textColor="@color/widgetTextColorSecondary"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/itemChildren"
        android:textSize="12sp"
        style="@style/Widget.AppCompat.TextView"
        tools:text="Child 1\n Child 2\n Child 3"
        android:textColor="@color/widgetTextColorSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>